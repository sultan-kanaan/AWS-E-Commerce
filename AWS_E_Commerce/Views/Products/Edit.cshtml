@model AWS_E_Commerce.Models.DTOs.ProductDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>
    <i class="bi bi-pencil-square"></i>
    Edit
</h1>
<h4>Product</h4>
<hr />
<div class="row justify-content-between">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="size" class="control-label"></label>
                <input asp-for="size" class="form-control" />
                <span asp-validation-for="size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="color" class="control-label"></label>
                <input asp-for="color" class="form-control" />
                <span asp-validation-for="color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImage" class="control-label"></label>
                <input type="file" name="file" asp-for="ProductImage" class="form-control" accept=".png, .jpg" />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategoryName" class="control-label"></label>
                <select class="form-control" asp-for="ProductCategoryId" asp-items="@(new SelectList(Model.ProductCategory,"Id","Name"))">
                    <option></option>
                </select>
                <span asp-validation-for="ProductCategoryName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-4">
                <i class="bi bi-check"></i>
                Save
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary mt-4">
                <i class="bi bi-x"></i>
                Cancel
            </a>
        </form>
    </div>
</div>



<div class="col-md-4">
    <div id="ProductImage-container" class="@(Model.Id > 0 ? string.Empty : "d-none")">
        <img src="@(Model.Id > 0 ? $"data:image/*;base64,{Convert.ToBase64String(Model.ProductImage)}" : string.Empty)" alt="Poster" class="img-thumbnail" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('#ProductImage').on('change', function () {
                
                var ProductImageContainer = $('#ProductImage-container');
                var image = window.URL.createObjectURL(this.files[0]);
                ProductImageContainer.removeClass('d-none');
                ProductImageContainer.find('img').attr('src', image);
            });

        });
    </script>
}
