@page
@model AWS_E_Commerce.Pages.Account.SignUpModel

<h2>SignUp Page</h2>

<form method="post">
    <div class="row">
        <div class="col-md-4">
            <label asp-for="register.Email" class="control-label"></label>
            <input asp-for="register.Email" class="form-control" />
            <span asp-validation-for="register.Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row">

        <div class="col-md-4">
            <label asp-for="register.Username" class="control-label"></label>
            <input asp-for="register.Username" class="form-control" />
            <span asp-validation-for="register.Username" class="text-danger"></span>
        </div>
    </div>

    <div class="row">

        <div class="col-md-4">
            <label asp-for="register.Password" class="control-label"></label>
            <input asp-for="register.Password" class="form-control" />
            <span asp-validation-for="register.Password" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-4">
        <i class="bi bi-door-open"></i>
        SignUp Now
    </button>

</form>
