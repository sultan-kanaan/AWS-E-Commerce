@page
@model AWS_E_Commerce.Pages.Category.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>
    <i class="bi bi-info-circle"></i>
    Details
</h1>

<div>
    <h4>
        @Html.DisplayFor(model => model.Category.Name)
    </h4>
    <hr />
    
        @foreach (var item in Model.Category.products)
        {
            <div class="card" style="width: 21rem;">

                <img src="@Html.DisplayFor(modelItem => item.ProductImage)" class="card-img-top" alt="Logo" width="50" height="280">
                <div class="card-body">

                    <h4 class="card-title">
                        Product @item.Name
                    </h4>
                    <div class="card-text">

                        <h6 class="list-group-item">
                          Price : @Html.DisplayFor(modelItem => item.Price)

                        </h6>
                        <h6 class="list-group-item">
                            size : @Html.DisplayFor(modelItem => item.size)
                        </h6>
                        <h6 class="list-group-item">
                            color : @Html.DisplayFor(modelItem => item.color)
                        </h6>
                        <h6 class="list-group-item">
                            Category : @Html.DisplayFor(modelItem => item.ProductCategoryName)
                        </h6>
                    </div>
                    <br>
                    <div>
                        <a asp-page="/Cart/Indax" class="btn btn-outline-success">
                            <i class="bi bi-cart4"></i>
                            Add to Cart
                        </a>
                    </div>
                </div>
            </div>
            <hr/>
        }
    
</div>
<div>
    <a asp-page="Index" class="btn btn-outline-warning">
        <i class="bi bi-arrow-counterclockwise"></i>
        Back to Categories
    </a>
</div>